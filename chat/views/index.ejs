<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>
<style>
    #chat{
        max-height: 500px;
        min-height: 500px;
        background-color: aliceblue;
        overflow-y: scroll;


    }
</style>
<body>
    <h1>Chat da Jess</h1>
    <div id="chat">

    </div><br>
    <input type="text" name="" id="msg" class="form-control" placeholder="Escreva a mensagem...">
    <input name="text" name="" id="username" placeholder="Seu nome de usuÃ¡rio" class="form-control">
    <button onclick="enviar()" class="btn btn-primary btn-lg btn-block" >Enviar</button>
</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.6.0/socket.io.js"></script>
<script>
    var socket = io('http://localhost:3000');

    socket.on('disconnect', () =>{
        console.log('Desconectado')
    });

    socket.on('showmsg', (data) =>{
        console.log(data);
        var chat = document.getElementById('chat');
        var p = document.createElement('p');
        p.innerHTML = data.username + " : "   + data.msg;
        chat.append(p);
    })

    function enviar (){
        var msgField = document.getElementById('msg');
        var usernameField = document.getElementById('username');

        var msg = msgField.value;
        var username = usernameField.value; 

        socket.emit('msg', {msg: msg, username: username});
    }

</script>
</html>